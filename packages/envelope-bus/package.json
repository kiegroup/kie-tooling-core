    "dist-tests"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "scripts": {
    "lint": "run-script-if --env KOGITO_TOOLING_BUILD_lint -c 'yarn eslint ./src --ext .ts,.tsx'",
    "test": "run-script-if --env KOGITO_TOOLING_BUILD_test -c 'rimraf dist-tests' -c 'tsc -p tsconfig.tests.json' -c 'jest --silent --verbose --passWithNoTests'",
    "build:dev": "rimraf dist && tsc -p tsconfig.dev.json",
    "build:prod": "yarn lint && rimraf dist && tsc -p tsconfig.prod.json && yarn test"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  }
}
