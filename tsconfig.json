{
  "exclude": ["./**/node_modules"],
  "compilerOptions": {
    "lib": ["es6", "dom", "es2018.promise", "es2019"],
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "jsx": "react-jsx"
  }
}
